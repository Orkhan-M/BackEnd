@model HomeVM
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout1";
    int count = 0;
}

<!-- Background Area Start -->
<section id="slider-container" class="slider-area">
    <div class="slider-owl owl-theme owl-carousel">
        <!-- Start Slingle Slide -->
        @foreach (Slider item in Model.Sliders)
        {
            <div class="single-slide item" style="background-image: url(img/slider/@item.Image">
                <!-- Start Slider Content -->
                <div class="slider-content-area">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-7 col-md-offset-left-5">
                                <div class="slide-content-wrapper">
                                    <div class="slide-content">
                                        @Html.Raw(item.Title)
                                        <p>@item.Description</p>
                                        <a class="default-btn" href="@item.Link">Learn more</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Start Slider Content -->
            </div>
        }
        <!-- End Slingle Slide -->
    </div>
</section>
<!-- Background Area End -->
<!-- Notice Start -->
<section class="notice-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left">
                    <h3>notice board</h3>
                    @await Component.InvokeAsync("Notice")
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right">

                    @foreach (NoticeRight item in Model.NoticeRights)
                    {
                        if (count < 2)
                        {
                            <div class="single-notice-right mb-25 pb-25">
                                <h3>@item.Title</h3>
                                <p>@item.Description</p>
                            </div>
                        }
                        else
                        {
                            <div class="single-notice-right">
                                <h3>@item.Title</h3>
                                <p>@item.Description</p>
                            </div>
                        }
                        count++;
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
<!-- Choose Start -->
<section class="choose-area pb-85 pt-77" style="background: url(../img/choose/@Model.Choose.BackGroundImage);">
    <div class="choose-area-img" style="background: url(../img/choose/@Model.Choose.SecondBackGroundImage);"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-left-4 col-sm-8 col-md-offset-left-4">
                <div class="choose-content text-left">
                    <h2>@Model.Choose.Title</h2>
                    @Html.Raw(Model.Choose.Description)
                    <a class="default-btn" href="@Model.Choose.Link">view courses</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Choose Area End -->
<!-- Courses Area Start -->
<div class="courses-area pt-150 text-center">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/img/icon/section.png" alt="section-title">
                    <h2>COURSES WE OFFER</h2>
                </div>
            </div>
        </div>
        <div class="row">
           @await Component.InvokeAsync("Course",3)
        </div>
    </div>
</div>
<!-- Courses Area End -->
<!-- Event Area Start -->
<div class="event-area one text-center pt-140 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/img/icon/section.png" alt="section-title">
                    <h2>UPCOMMING EVENTS</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-12 col-xs-12">
                @foreach (var item in Model.Events.Take(4))
                {
                    <div class="single-event mb-35">
                        <div class="event-date">
                            <h3><a href="event-details.html">@item.Day.ToString("dd")<span>@item.Month.ToString("MMMM")</span></a></h3>
                        </div>
                        <div class="event-content text-left">
                            <div class="event-content-left">
                                <h4><a href="event-details.html">@item.Title</a></h4>
                                <ul>
                                    <li><i class="fa fa-clock-o"></i>@item.StartTime.ToString("hh:mm tt") - @item.EndTime.ToString("hh:mm tt")</li>
                                    <li><i class="fa fa-map-marker"></i>@item.City</li>
                                </ul>
                            </div>
                            <div class="event-content-right">
                                <a class="default-btn" href="event-details.html">join now</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-6 hidden-sm col-xs-12">
                    @foreach (var item in Model.Events.Skip(4).Take(4))
                    {
                        <div class="single-event mb-35">
                            <div class="event-date">
                                <h3><a href="event-details.html">@item.Day.ToString("dd")<span>@item.Month.ToString("MMMM")</span></a></h3>
                            </div>
                            <div class="event-content text-left">
                                <div class="event-content-left">
                                    <h4><a href="event-details.html">@item.Title</a></h4>
                                    <ul>
                                        <li><i class="fa fa-clock-o"></i>@item.StartTime.ToString("hh:mm tt") - @item.EndTime.ToString("hh:mm tt")</li>
                                        <li><i class="fa fa-map-marker"></i>@item.City</li>
                                    </ul>
                                </div>
                                <div class="event-content-right">
                                    <a class="default-btn" href="event-details.html">join now</a>
                                </div>
                            </div>
                        </div>
                    }
            </div>
        </div>
    </div>
</div>
<!-- Event Area End -->
<!-- Testimonial Area Start -->
@await Component.InvokeAsync("Testimonial")
<!-- Testimonial Area End -->
<!-- Blog Area Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/img/icon/section.png" alt="section-title">
                    <h2>LATEST FROM BLOG</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @await Component.InvokeAsync("Blog",3)
        </div>
    </div>
</div>
<!-- Blog Area End -->
<!-- Subscribe Start -->
@await Component.InvokeAsync("Subscribe")
<!-- Subscribe End -->
